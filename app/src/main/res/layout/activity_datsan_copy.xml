<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timsan"
        android:layout_width="413dp"
        android:layout_height="54dp"
        android:background="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:text="Chọn sân"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/timsan">
        <EditText
            android:id="@+id/edt_timsan"
            android:layout_width="260dp"
            android:layout_height="43dp"
            android:inputType="text"
            app:layout_constraintVertical_bias="0.006"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:backgroundTint="#3CB371"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_search"
            android:layout_toRightOf="@id/edt_timsan" />
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_timsan"/>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>