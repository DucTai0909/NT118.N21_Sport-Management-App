<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln_khachhang_thanhtoan_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imv_khachang_thanhtoan_anh"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/sp_pepsi"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_admin_khachhang_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/tv_khachhang_thanhtoan_tendouongSan"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="@color/black"
                android:text="Pepsi lon 330ml"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_khachhang_thanhtoan_slGiochoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL: 36"
                android:layout_below="@id/tv_khachhang_thanhtoan_tendouongSan"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_khachhang_thanhtoan_giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:text="12.000"
            android:textSize="16dp"
            android:textColor="#ff002a" />

    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:layout_height="3dp"
        android:layout_below="@id/ln_khachhang_thanhtoan_item"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />
</RelativeLayout>
