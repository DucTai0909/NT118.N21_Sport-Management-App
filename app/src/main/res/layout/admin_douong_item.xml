<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ln_admin_douong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/sp_pepsi"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_admin_khachhang_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">
            <TextView
                android:id="@+id/tv_admin_douong_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="Pepsi lon 330ml"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_admin_douong_sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL:  "
                android:layout_below="@id/tv_admin_douong_name"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_admin_douong_name"
                android:layout_toRightOf="@id/tv_admin_douong_sl"
                android:layout_marginTop="7dp"
                android:text="35"
                android:textColor="#55c63f" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="33dp"
            android:text="12.000 Đ"
            android:textSize="16dp"
            android:textColor="#ff002a"
            app:drawableRightCompat="@drawable/ic_right_arrow" />
    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:layout_height="3dp"
        android:layout_below="@id/ln_admin_douong"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />
</RelativeLayout>
